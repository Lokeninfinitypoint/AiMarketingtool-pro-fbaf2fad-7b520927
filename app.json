{
  "expo": {
    "name": "MarketingTool",
    "slug": "marketingtool",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "marketingtool",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D0F1C"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "pro.marketingtool.app",
      "buildNumber": "12",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Allow MarketingTool to access your camera for profile photos and content creation.",
        "NSPhotoLibraryUsageDescription": "Allow MarketingTool to access your photos for uploading media content.",
        "NSMicrophoneUsageDescription": "Allow MarketingTool to access your microphone for voice features.",
        "NSFaceIDUsageDescription": "Allow MarketingTool to use Face ID for secure authentication.",
        "NSLocationWhenInUseUsageDescription": "Allow MarketingTool to access your location for personalized content.",
        "NSUserTrackingUsageDescription": "This identifier will be used to deliver personalized ads and analytics.",
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "LSApplicationQueriesSchemes": [
          "mailto",
          "tel",
          "sms"
        ]
      },
      "associatedDomains": [
        "applinks:marketingtool.pro",
        "applinks:app.marketingtool.pro"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0D0F1C"
      },
      "package": "pro.marketingtool.app",
      "versionCode": 12,
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "marketingtool.pro",
              "pathPrefix": "/app"
            },
            {
              "scheme": "https",
              "host": "app.marketingtool.pro"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-secure-store",
      "expo-local-authentication",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#6C5CE7"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow MarketingTool to access your camera."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow MarketingTool to access your photos.",
          "savePhotosPermission": "Allow MarketingTool to save photos.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow MarketingTool to use your location."
        }
      ]
    ],
    "extra": {
      "appwriteEndpoint": "https://api.marketingtool.pro/v1",
      "appwriteProjectId": "6952c8a0002d3365625d",
      "aiApiUrl": "https://app.marketingtool.pro",
      "eas": {
        "projectId": "93b0a546-bd05-4250-b2c9-58aa43ecc1f2"
      }
    },
    "owner": "madav631"
  }
}
